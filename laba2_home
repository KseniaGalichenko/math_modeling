#задание №1
print("Введите целое число")
x = int(input())
if x % 2 == 0:
 print("Чётное число")
else:
 print("Нечётное число")

#задание №2
print("Введите первый член геометрической прогрессии")
x = int(input())
print("Введите знаменатель геометрической прогрессии")
q = int(input())
print("Введите количество членов геометрической прогрессии")
y = int(input())
b = [ x * q ** (n-1) for n in range(1, y + 1)] 
print(b)

#задание №3
print("введите год")
x = int(input())
if x % 4 == 0 and x % 400 == 0:
  print("Этот год является високосным")
elif x % 100 != 0:
  print("Этот год не является високосным")
else:
  print("Этот год не является високосным")

