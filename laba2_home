#задание №5
print("Введите два целых числа")
x = int(input())
y = int(input())
if (x % y) == 0:
  z = x / y
  print("Первое число делится на второе.", "Частное равно", z)
elif (x % y) != 0:
  z = x // y
  s = x % y
  print("Первое число не делится на второе нацело.", "Частное равно", z, "Остаток равен", s)
elif y == 0:
  print("На ноль делить нельзя!")
#если ввести y=0, то выдает ошибку и я не понимаю, что не правильно

#задание №1(дополнительный блок)
print("Введите коэффициенты квадратного уравнения")
a = int(input())
b = int(input())
c = int(input())
D = (b ** 2) - (4 * a * c)
if D > 0:
  x_1 = ((-b) + (D ** 1 / 2)) / (2 * a)
  x_2 = ((-b) - (D ** 1 / 2)) / (2 * a)
  print("Корни уравнения равны", x_1, ";", x_2) #почему-то получаются неправильные корни
elif D == 0:
  x = (-b) / 2 * a
  print("Корень квадратного уравнения равен", x) #зато это работает!
elif D < 0:
  print("Решений нет!") #и это тоже работает

#задание №2(дополнительный блок)
print("Введите длины сторон треугольника")
a = int(input())
b = int(input())
c = int(input())
if a < b +c and b < a + c and c < a + b:
  print("Такой треугольник существует")
  if a == b == c:
    print("Треугольник является равносторонним")
  elif a == b and a != c and b != c or a == c and a != b and c != b or b == c and b != a and b != c:
    print("Треугольник является равнобедренным")
  elif a != b and a != c and b != c:
    print("Треугольник является разносторонним")
else:
  print("Такой треугольник не существует!")
